# Site Configuration
# Customize these for MEV Wiki
NEXT_PUBLIC_SITE_URL=https://www.mev.wiki/
NEXT_PUBLIC_SITE_TITLE=MEV Wiki
NEXT_PUBLIC_SITE_DESCRIPTION=Welcome to the MEV Wiki.
NEXT_PUBLIC_SITE_KEYWORDS=MEV,Maximal Extractable Value,Ethereum,front-running,sandwich attacks,blockchain,DeFi,Flashbots

# Branding
NEXT_PUBLIC_LOGO_PATH=/mev-logo.png
NEXT_PUBLIC_TWITTER_HANDLE=@AutomataNetwork

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://ata.ws/twitter
NEXT_PUBLIC_TELEGRAM_URL=https://ata.ws/telegram
NEXT_PUBLIC_DISCORD_URL=https://ata.ws/discord
NEXT_PUBLIC_GITHUB_URL=https://ata.ws/github
NEXT_PUBLIC_MEDIUM_URL=https://blog.ata.network/

# GitHub Integration (update for your specific project repo)
NEXT_PUBLIC_GITHUB_OWNER=automata-network
NEXT_PUBLIC_GITHUB_REPO=your-project-repo
GITHUB_TOKEN=your-github-token-here

# GitHub Pages / static export
# Base path should match your repository name when deploying to https://<user>.github.io/<repo>
NEXT_PUBLIC_BASE_PATH=/mev-wiki
# Set to true when building for GitHub Pages; keeps Next.js in static export mode
NEXT_EXPORT=true
NEXT_PUBLIC_GITHUB_PAGES=true
# Set to false to hide the search dialog (enabled by default)
NEXT_PUBLIC_ENABLE_SEARCH=true
